{
  "name": "mana-workspace",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "infra/aws/*"
  ],
  "engines": {
    "node": "^24.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "build": "turbo build --output-logs=errors-only --log-order=grouped --summarize",
    "clean": "git clean -xfd .",
    "clean:workspaces": "turbo clean --output-logs=errors-only --log-order=grouped",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint --output-logs=errors-only --log-order=grouped --summarize && manypkg check",
    "lint:fix": "turbo lint:fix --output-logs=errors-only --log-order=grouped --summarize",
    "test": "turbo test --parallel --output-logs=errors-only --log-order=grouped --summarize",
    "infra:dev-ssh:deploy": "npm run deploy --workspace infra/aws/dev-ssh",
    "infra:dev-ssh:destroy": "npm run destroy --workspace infra/aws/dev-ssh",
    "infra:dev-ssh:synth": "npm run synth --workspace infra/aws/dev-ssh",
    "format": "biome format --write .",
    "typecheck": "turbo typecheck --output-logs=errors-only --log-order=grouped --summarize"
  },
  "packageManager": "npm@11.5.1",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@manypkg/cli": "^0.25.1",
    "tsx": "^4.19.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  }
}
