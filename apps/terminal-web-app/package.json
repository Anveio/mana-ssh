{
  "name": "@mana-ssh/terminal-web-app",
  "version": "0.0.1",
  "private": true,
  "description": "A web-based terminal application to demonstrate and test the ManaSSHWeb library.",
  "scripts": {
    "clean": "git clean -xfd .",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run --reporter=dot --silent",
    "test:watch": "vitest --reporter=default --silent=false",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply ."
  },
  "dependencies": {
    "@mana-ssh/tui-react": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.0",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
