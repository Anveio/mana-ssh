{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "vitest/globals"],
    "typeRoots": ["../../../../types", "./node_modules/@types"]
  },
  "include": ["bin", "lib", "scripts", "tests", "../../../../types/global"]
}
