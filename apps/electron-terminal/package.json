{
  "name": "@mana/electron-terminal",
  "version": "0.0.0",
  "private": true,
  "description": "Hello-world Electron shell for the Mana terminal stack.",
  "main": "out/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "vite build --mode main",
    "build:preload": "vite build --mode preload",
    "build:renderer": "vite build --mode renderer",
    "dev": "node ./scripts/dev.mjs",
    "start": "npm run build && npm run start:electron",
    "start:electron": "npx electron out/main.js",
    "test": "npm run build && playwright test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mana/tui-react": "^0.0.1",
    "@mana/websocket": "0.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "electron": "^38.2.1",
    "@vitejs/plugin-react": "^4.3.4",
    "playwright": "^1.55.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.9"
  }
}
