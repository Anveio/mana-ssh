{
  "name": "@mana-ssh/tui-web-canvas-renderer",
  "version": "0.0.1",
  "private": true,
  "description": "Web canvas renderer for the Mana SSH terminal stack.",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "clean": "git clean -xfd .",
    "test": "vitest run --reporter=dot --silent",
    "test:watch": "vitest --reporter=default --silent=false",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/pixelmatch": "^5.2.6",
    "canvas": "^3.2.0",
    "pixelmatch": "^7.1.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mana-ssh/vt": "workspace:*"
  }
}
