{
  "name": "@mana/ssh",
  "version": "0.0.1",
  "description": "The core, transport-agnostic SSH protocol implementation for Mana.",
  "scripts": {
    "clean": "git clean -xfd .",
    "clean:artifacts": "rm -rf dist",
    "build": "bunx vite build --config vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest --reporter=default --silent=false",
    "test:coverage": "vitest run --coverage --reporter=dot --silent",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run clean:artifacts && bun run build"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vite": "^5.3.4",
    "vite-plugin-dts": "^4.2.2",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "exports": {
    "./client/web": {
      "types": "./dist/client/web.d.ts",
      "import": "./dist/client/web.js",
      "require": "./dist/client/web.cjs"
    },
    "./client/node": {
      "types": "./dist/client/node.d.ts",
      "import": "./dist/client/node.js",
      "require": "./dist/client/node.cjs"
    },
    "./server/node": {
      "types": "./dist/server/node.d.ts",
      "import": "./dist/server/node.js",
      "require": "./dist/server/node.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**"
  ]
}
