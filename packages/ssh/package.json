{
  "name": "@mana/ssh",
  "version": "0.0.1",
  "private": true,
  "description": "The core, transport-agnostic SSH protocol implementation for Mana.",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "clean": "git clean -xfd .",
    "clean:artifacts": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest --reporter=default --silent=false",
    "test:coverage": "vitest run --coverage --reporter=dot --silent",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client/web": {
      "types": "./src/client/web/index.ts",
      "default": "./src/client/web/index.ts"
    },
    "./client/node": {
      "types": "./src/client/node/index.ts",
      "default": "./src/client/node/index.ts"
    },
    "./server/node": {
      "types": "./src/server/node/index.ts",
      "default": "./src/server/node/index.ts"
    }
  },
  "files": [
    "dist/**"
  ]
}
