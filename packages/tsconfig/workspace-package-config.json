{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "outDir": "dist",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "typeRoots": ["../../types", "../../node_modules/@types"]
  },
  "exclude": ["dist", "build", "node_modules"]
}
