{
  "name": "@mana-ssh/tui-react",
  "version": "0.0.1",
  "private": true,
  "description": "React renderer for the Mana SSH terminal stack.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "git clean -xfd .",
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "bun run test:unit && bun run test:e2e",
    "test:unit": "vitest run --reporter=dot --silent",
    "test:e2e": "playwright test",
    "test:watch": "vitest --reporter=default --silent=false",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.3.3",
    "axe-core": "^4.10.2",
    "jsdom": "^27.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.0.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mana-ssh/tui-web-canvas-renderer": "workspace:*",
    "@mana-ssh/vt": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}
