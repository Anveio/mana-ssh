    "jsdom": "^27.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mana-ssh/tui-web-canvas-renderer": "workspace:*",
    "@mana-ssh/vt": "workspace:*"
