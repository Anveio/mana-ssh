{
  "name": "@mana/websocket",
  "version": "0.0.0",
  "private": true,
  "description": "WebSocket transport primitives for Mana SSH sessions.",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./protocol": {
      "types": "./src/protocol/index.ts",
      "import": "./src/protocol/index.ts",
      "require": "./src/protocol/index.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xfd .",
    "build": "echo 'TODO: implement build step for @mana/websocket'",
    "test": "bun run test:unit && bun run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest run --coverage --reporter=dot --silent",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": false,
  "dependencies": {
    "@mana/ssh": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "esbuild": "^0.21.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
