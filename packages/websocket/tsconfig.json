{
  "extends": "../tsconfig/workspace-package-config.json",
  "compilerOptions": {
    "paths": {
      "@mana/websocket": ["./src/root-entrypoint-block.ts"],
      "@mana/websocket/*": ["./src/*"],
      "@mana/ssh": ["../ssh/src/index.ts"],
      "@mana/ssh/*": ["../ssh/src/*"]
    },
    "rootDir": "../..",
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": "./node_modules/.cache/websocket.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../ssh/src/**/*.ts",
    "../ssh/src/**/*.tsx"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
